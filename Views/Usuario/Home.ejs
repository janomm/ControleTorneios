                    <tr>
                        <th>Nome</th>
                        <th>Data</th>
                        <th>Formato</th>
                        <th>Tipo Torneio</th>
                    </tr>
                </thead>
                <tbody>
                    <% dados.torneios.forEach(torneio => { %>
                        <tr>
