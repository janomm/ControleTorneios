<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
<div class="container">
    <h2>Rankings</h2>
    <a href="/rankings/new" class="btn btn-success">Inserir Ranking</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Tipo Torneio</th>
                <th>Formato</th>
                <th>Data In√≠cio</th>
                <th>Data Final</th>
            </tr>
        </thead>
        <tbody>
            <% rankings.forEach(ranking => { %>
                <tr>
                    <td><%= ranking.nome %></td>
                    <td><%= ranking.TipoTorneioNome %></td>
                    <td><%= ranking.FormatoNome %></td>
                    <td><%= ranking.dtInicio %></td>
                    <td><%= ranking.dtFinal %></td>
                    <td>
                        <a href="/rankings/view/<%= ranking.id %> " class="btn btn-success ">Ver Ranking</a>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>
