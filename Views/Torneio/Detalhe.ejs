<%- include('../partials/header.ejs') %>
<%- include('../partials/navbarUser.ejs') %>
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2><%= dados.torneio.nome %> - <%= dados.torneio.data %></h2>
        </div>
    </div>
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Jogadores Inscritos</h2>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                    </tr>
                </thead>
                <tbody>
                    <% dados.jogadores.forEach(jogador => { %>
                        <tr><td><%= jogador.nome %></td></tr>
                    <% }) %>
                        
                    <% if(dados.inscrito) {%>
                        <tr><td><a href="/torneios/cancelar/<%= dados.torneio.id %>" class="btn btn-danger">Cancelar</a></td></tr>
                    <%} else {%>
                        <tr><td><a href="/torneios/inscrever/<%= dados.torneio.id %>" class="btn btn-success">Participar</a></td></tr>
                    <%}%>
                </tbody>
                
            </table>
            
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>


