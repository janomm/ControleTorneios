<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Torneio <%= dados.torneio.nome %></h2>
    <!--a href="/torneios/new" class="btn btn-success">Inserir Torneio</a-->
    <hr>

    <table class="table table-bordered">
        <thead>
            <% if(dados.torneio.fase == 1 || dados.torneio.fase == 2 || dados.torneio.fase == 4){ %>
                <tr><th>Atual</th> <th>Próximo</th> </tr>
            <%} else { %>
                <% if(dados.torneio.fase != 5){ %>
                    <tr><th>Anterior</th> <th>Atual</th> <th>Próximo</th> </tr>
                <%} else { %>
                    <tr><th>Anterior</th> <th>Atual</th> </tr>
                <%} %>
            <%} %>
        </thead>
        <tbody>
            <tr>
                <% if(dados.torneio.fase > 2 && dados.torneio.fase != 4) { %>
                    <td>                    
                        <a href="/torneios/editFase/<%= dados.torneio.fase - 1 %>&<%= dados.torneio.id %>" class="btn btn-danger">
                            << <%= dados.lst[dados.torneio.fase - 1] %>
                        </a>
                    </td>
                <% } %>

                <td><strong><%= dados.lst[dados.torneio.fase] %></strong></td>
                <td>
                    <% if(dados.torneio.fase < 5) { %>
                        <a href="/torneios/editFase/<%= dados.torneio.fase + 1 %>&<%= dados.torneio.id %>" class="btn btn-success">
                            <%= dados.lst[dados.torneio.fase + 1] %> >>
                        </a>
                    <% } else { %>
                        -
                    <% } %>
                </td>
            </tr>
        </tbody>
    </table>
    <a href="/torneios" class="btn btn-warning">Voltar</a>
</div>
<%- include('../partials/footer.ejs') %>
